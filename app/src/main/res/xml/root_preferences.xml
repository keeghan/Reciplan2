<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Theme">
        <SwitchPreference
            app:key="pref_theme"
            app:defaultValue="true"
            app:title="@string/enable_dark_mode" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sound_haptics">
        <SwitchPreference
            app:key="pref_haptics"
            app:defaultValue="true"
            app:title="@string/enable_haptics" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/other_header">
        <Preference
            app:key="build_version"
            app:summary=""
            app:title="@string/build_version" />

        <Preference
            app:key="pref_copyright_disclaimer"
            app:title="@string/copyright_disclaimer_str"
            app:summary="@string/tap_to_read"
            />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/developer">
        <Preference
            app:key="pref_developer_info"
            app:summary="@string/tap_for_info"
            app:title="@string/developer_info" />

        <Preference
            app:key="pref_contact_developer"
            app:summary="K33GH4N GH"
            app:title="@string/contact_developer" />
    </PreferenceCategory>

</PreferenceScreen>